@model U2_W1_D5_Homework_Backend.Models.Trasgressore

@{
    ViewBag.Title = "PagDettagliTrasg";
}

<h2 class="text-center mt-5">Dettagli di @Html.DisplayTextFor(model => model.Nome) @Html.DisplayTextFor(model => model.Cognome)</h2>

<div class="container my-5">
    <div class="row mb-2">
        <div class="d-flex flex-column col-4">
            <h5 class="mb-1">@Html.DisplayNameFor(model => model.Cognome)</h5>
            <p class="mb-1">@Html.DisplayFor(model => model.Cognome)</p>
        </div>
        <div class="d-flex flex-column col-4">
            <h5 class="mb-1">@Html.DisplayNameFor(model => model.Nome)</h5>
            <p class="mb-1">@Html.DisplayFor(model => model.Nome)</p>
        </div>
        <div class="d-flex flex-column col-4">
            <h5 class="mb-1">@Html.DisplayNameFor(model => model.Cod_Fisc)</h5>
            <p class="mb-1">@Html.DisplayFor(model => model.Cod_Fisc)</p>
        </div>
    </div>
    <div class="row">
        <div class="d-flex flex-column col-4">
            <h5 class="mb-1">@Html.DisplayNameFor(model => model.Indirizzo)</h5>
            <p class="mb-1">@Html.DisplayFor(model => model.Indirizzo)</p>
        </div>
        <div class="d-flex flex-column col-4">
            <h5 class="mb-1">@Html.DisplayNameFor(model => model.Citta)</h5>
            <p class="mb-1">@Html.DisplayFor(model => model.Citta)</p>
        </div>
        <div class="d-flex flex-column col-4">
            <h5 class="mb-1">@Html.DisplayNameFor(model => model.Cap)</h5>
            <p class="mb-1">@Html.DisplayFor(model => model.Cap)</p>
        </div>
    </div>
    @Html.ActionLink("Modifica", "PagModificaTrasg", new {id = Model.IDAnagrafica}, new {@class = "btn btn-primary my-2"})
    @{Html.RenderAction("PartialViewPagListaVerbaliTrasg");}
</div>

