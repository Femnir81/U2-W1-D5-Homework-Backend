@model IEnumerable<U2_W1_D5_Homework_Backend.Models.Violazione>

@{
    ViewBag.Title = "Violazioni";
}

<div class="container">
    <h2>Violazioni</h2>
    <table class="table table-striped table-primary table-hover my-5">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.IDViolazione)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Descrizione)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IDViolazione)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Descrizione)
                </td>
                <td class="d-flex justify-content-end">
                    @Html.ActionLink("Modifica", "PagModificaViolazione", new { id=item.IDViolazione }, new { @class = "btn btn-sm btn-warning me-1" })
                    @Html.ActionLink("Cancella", "PagCancellaViolazione", new { id=item.IDViolazione }, new { @class = "btn btn-sm btn-danger me-1" })
                </td>
            </tr>
        }
    </table>
    <p class="d-flex justify-content-center">
        @Html.ActionLink("Aggiungi Violazione", "CreateActionViolazione", new { }, new { @class = "btn btn-success mb-5" })
    </p>
</div>
