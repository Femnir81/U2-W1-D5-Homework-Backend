@model IEnumerable<U2_W1_D5_Homework_Backend.Models.Trasgressore>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2 class="mt-5 text-center fs-1">Trasgressori</h2>
    <table class="table table-striped table-primary table-hover my-5">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.IDAnagrafica)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indirizzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Citta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cod_Fisc)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IDAnagrafica)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Indirizzo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Citta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Fisc)
                </td>
                <td class="d-flex justify-content-end">
                    @Html.ActionLink("Aggiungi", "PagAggiungiVerbale", new { id = item.IDAnagrafica }, new { @class = "btn btn-sm btn-success me-1" })
                    @Html.ActionLink("Dettagli", "PagDettagliTrasg", new { id = item.IDAnagrafica }, new { @class = "btn btn-sm btn-info me-1" })
                    @Html.ActionLink("Modifica", "PagModificaTrasg", new { id=item.IDAnagrafica }, new { @class = "btn btn-sm btn-warning me-1" })
                    @Html.ActionLink("Cancella", "PagCancellaTrasg", new { id=item.IDAnagrafica }, new { @class = "btn btn-sm btn-danger me-1" })
                </td>
            </tr>
        }
    </table>
    <p class="d-flex justify-content-center">
        @Html.ActionLink("Aggiungi Trasgressore", "Create", new { }, new { @class = "btn btn-success mb-5" })
    </p>
</div>
