                    <li class="nav-item me-2">
                        @Html.ActionLink("Violazioni", "Violazioni", "Home", new { @class = "text-white me-2", style="text-decoration:none;" })
                    </li>
                    <li class="nav-item me-2">
                        @Html.ActionLink("Registro verbali", "PagRegistroVerbali", "Home", new { @class = "text-white me-2", style="text-decoration:none" })
                    </li>                   
                </ul>
            </div>
        </div>
    </nav>
